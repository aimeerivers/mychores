<% if session[:person].status == "Site Creator" %>

	<% @heading=@person.login %>
	<% @h1class='person' %>
	
	<% @breadcrumbs = link_to_person(@person, 'breadcrumb') %>
	
	<% form_tag(:action => 'update', :id => @person) do %><div>
	
	  <%= render :partial => 'form' %>
	  
	  <%= submit_tag 'Save' %>
	</div><% end %>

<% else %>

	<%= access_denied() %>
	
<% end %>